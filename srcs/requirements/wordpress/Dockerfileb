FROM alpine:3.17

EXPOSE 9000

ARG	DB_NAME \
	DB_USER \
	DB_PASS \
	DB_HOST \
	WP_TITLE \
	WP_ADMIN_USR \
	WP_ADMIN_PASS \
	WP_ADMIN_EMAIL \
	WP_USR \
	WP_USR_PASS \
	WP_USR_EMAIL \
	DOMAIN_NAME

RUN apk update && apk upgrade && apk add --no-cache \
	php81 \
	php81-fpm  \
	php81-mysqli  \
	php81-json  \
	php81-curl  \
	php81-dom  \
	php81-exif  \
	php81-fileinfo \
	php81-mbstring \
	php81-openssl \
	php81-xml \
	php81-zip \
	php81-redis \
	wget \
	unzip && \
	sed -i "s|listen = 127.0.0.1:9000|listen = 9000|g" \
	/etc/php81/php-fpm.d/www.conf && \
	sed -i "s|;listen.owner = nobody|listen.owner = nobody|g" \
	/etc/php81/php-fpm.d/www.conf && \
	sed -i "s|;listen.group = nobody|listen.group = nobody|g" \
	/etc/php81/php-fpm.d/www.conf && \
	rm -f /var/cache/apk/*

RUN	wget https://wordpress.org/latest.zip && \
	unzip latest.zip && \
	cp -rf wordpress/* . && \
	rm -rf wordpress latest.zip

COPY	./requirements/wordpress/tools/wp-script.sh /wp-script.sh

WORKDIR	/var/www/html


ENTRYPOINT ["sh", "/wp-script.sh"]
